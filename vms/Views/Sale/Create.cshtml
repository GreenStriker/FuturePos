    <script>

        var saleOrder = {
            init: function() {},
            count: 1,
            unitAmount: 0,
            totalPrice: 0,
            totalVat: 0,
            typeId: 0,
            saleOrders:[],
            SaleOrderDetailList: [],
            ContentInfoJson: [],
            SalePaymenJson:[],
            item: [],


            gridTableEmpty: function() {
                $('#ProductId').val('');
                $('#Product').val('');
                $('#Amount').text('');
                $('#item').val('');
                $('#amount').val('0');
                $('#DiscountPerItem').val('0');
                $('#VAT').val('0');
                $('#VATValue').val('0');
                $('#MaxSaleQty').val('');
            },
            isNumber:function (n) {
                return !isNaN(parseFloat(n)) && isFinite(n);
            },
            CalculateVatValueWithTotal: function(vatPercent) {
                var totalAmount = $('#amount').val();
                var vatPercentage = $('#VAT').val();

                var vatValue = parseFloat(vatPercentage) / 100;
                vatValue = parseFloat(totalAmount) * vatValue;
                $('#VATValue').val(vatValue);
                $('#Amount').text(parseFloat(totalAmount) + vatValue);

            },

            add: function () {

                var productName = $('#Product').val();
                var productId = $('#ProductId').val();
                var item = $('#item').val();
                var amount = $('#amount').val();
                var unitAmount = $('#Amount').text();
                var DiscountPerItem = $('#DiscountPerItem').val();
                var VAT = $('#VAT').val();
                var VATValue = $('#VATValue').val();
                var MaxSaleQty = $('#MaxSaleQty').val();
                if (productId>0) {

                    var canAdd = true;

                    $.each(saleOrder.SaleOrderDetailList,
                        function (i, v) {
                            if (saleOrder.SaleOrderDetailList[i].ProductId == productId) {
                                alert('Sorry! product Order Exists.');
                                canAdd = false;

                            }

                        });
                    if (!parseInt(item)) {
                        alert('Number of item is inValid!');
                        canAdd = false;
                    }
                    if (!parseInt(amount)) {
                        alert('Amount of item is inValid!');
                        canAdd = false;
                    }
                    if (canAdd) {
                        var data = new Object();
                        data.ProductId = productId;
                        data.Qty = item;
                        data.UnitPrice = amount;
                        data.DiscountPerItem = DiscountPerItem;
                        data.Vatpercent = VATValue;
                        
                        data.TotalAmount = unitAmount;
                        saleOrder.totalPrice += parseFloat(unitAmount);
                        saleOrder.SaleOrderDetailList.push(data);

                        var html = '<tr id="' +
                            data.ProductId +
                            '">' +
                            '<td>' +
                            saleOrder.count +
                            '</td>' +
                            '<td>' +
                            productName +
                            '</td>' +
                            '<td>' +
                            MaxSaleQty +
                            '</td>' +
                            '<td>' +
                            item +
                            '</td>' +
                            '<td>' +
                            amount +
                            '</td>' +
                            '<td>' +
                            VAT +
                            '</td>' +
                            '<td>' +
                            VATValue +
                            '</td>' +
                            '<td>' +
                            DiscountPerItem +
                            '</td>' +

                            '<td>' +
                            unitAmount +
                            '</td>' +

                            '<td><span onclick="Delete(' +
                            data.ProductId +
                            ')"  class="glyphicon glyphicon-minus btn-xs"></a></span></td>';

                        html += '</tr>';

                        $("table#gridTable > tbody").append(html);
                        $('#TotalPrice').text(saleOrder.totalPrice);
                        $('#PaidAmount').val(saleOrder.totalPrice);
                        saleOrder.gridTableEmpty();
                        saleOrder.count++;

                    }
                }

            },
            addDocument: function () {

                var files = $("#FileUpload").get(0).files;
                var table = document.getElementById('contentTable');
                var rowCount = table.rows.length;
                if (files) {
                    var canAdd = true;

                    if (canAdd) {
                        var data = new Object();
                        data.rowCount = rowCount;
                        data.UploadFile = files[0];
                        saleOrder.ContentInfoJson.push(data);

                        var html = '<tr id="' +
                            rowCount +
                            '">' +
                            '<td>' +
                            rowCount +
                            '</td>' +
                            '<td>' +
                            files[0].name +
                            '</td>' +
                            '<td><span onclick="DeleteDocument(' +
                            rowCount +
                            ')"  class="glyphicon glyphicon-minus btn-xs"></a></span></td>';

                        html += '</tr>';

                        $("table#contentTable > tbody").append(html);

                    }
                }

            },
            addPayment: function () {

                var PaymentMethod = $('#PaymentMethodId option:selected').text();
                var PaymentMethodId = $('#PaymentMethodId').val();
                var PaidAmount = $("#PaidAmount").val();
                var PaymentDate = $("#PaymentDate").val();
                var table = document.getElementById('payment');
                var rowCount = table.rows.length;
                if (PaymentMethodId > 0) {
                    var canAdd = true;

                    if (canAdd) {
                        var data = new Object();
                        //PurchaseDetails
                        data.rowCount = rowCount;
                        data.PaymentMethodId = PaymentMethodId;
                        data.PaidAmount = PaidAmount;
                        data.PaymentDate = PaymentDate;
                        saleOrder.SalePaymenJson.push(data);

                        var html = '<tr id="' +
                            rowCount +
                            '">' +
                            '<td>' +
                            rowCount +
                            '</td>' +
                            '<td>' +
                            PaymentMethod +
                            '</td>' +
                            '<td>' +
                            PaidAmount +
                            '</td>' +
                            '<td>' +
                            PaymentDate +
                            '</td>' +
                            '<td><span onclick="DeletePayment(' +
                            rowCount +
                            ')"  class="glyphicon glyphicon-minus btn-xs"></a></span></td>';

                        html += '</tr>';

                        $("table#payment > tbody").append(html);
                        //saleOrder.count++;

                    }
                }

            },
            delete: function (id) {
                // var j = 0;
                debugger
                for (var key in saleOrder.SaleOrderDetailList) {
                    var value = saleOrder.SaleOrderDetailList[key].ProductId;
                    if (saleOrder.SaleOrderDetailList[key].ProductId == id) {
                        saleOrder.totalPrice -= parseFloat(saleOrder.SaleOrderDetailList[key].TotalAmount);
                        $('#TotalPrice').text(saleOrder.totalPrice);
                        $('#PaidAmount').val(saleOrder.totalPrice);
                    }
                }
                $.each(saleOrder.SaleOrderDetailList,
                    function (i, v) {

                        if (saleOrder.SaleOrderDetailList[i].ProductId == id) {

                            saleOrder.SaleOrderDetailList.splice(i, 1);

                        }
                        $("tr#" + id).remove().fadeOut();

                    });

            },
            deletePayment: function (id) {

                $.each(saleOrder.SalePaymenJson,
                    function (i, v) {
                        if (saleOrder.SalePaymenJson[i].rowCount == id) {

                            saleOrder.SalePaymenJson.splice(i, 1);

                        }
                        $("tr#" + id).remove().fadeOut();

                    });

            },
            deleteDocument: function (id) {

                $.each(saleOrder.ContentInfoJson,
                    function (i, v) {
                        if (saleOrder.ContentInfoJson[i].rowCount == id) {

                            saleOrder.ContentInfoJson.splice(i, 1);

                        }
                        $("tr#" + id).remove().fadeOut();

                    });

            },
            calculate: function (value) {

                var unitAmount = $('#amount').val();
                var discount = $('#DiscountPerItem').val();

                if (!saleOrder.isNumber(unitAmount) || !(saleOrder.isNumber(value)) || !(saleOrder.isNumber(discount))) {
                    return;
                } else {
                    //var totalAmount = $('#amount').val();
                    var vatPercentage = $('#VAT').val();

                    var vatValue = parseFloat(vatPercentage) / 100;
                    vatValue = parseFloat(unitAmount) * vatValue;
                    var totalAmount = (parseFloat(unitAmount) * value)+vatValue-discount;
                   // $('#Amount').text(parseFloat(totalAmount) + vatValue);
                    $("#Amount").text(totalAmount);

                }

            },

            Save: function () {
                debugger
                var CustomerMobile = $('#CustomerMobile').val();
                //var PurchaseInvoice = $('#PurchaseInvoice').val();
                //var VoucherNo = $('#VoucherNo').val();
                var DiscountOnTotal = $('#DiscountOnTotal').val();
                var SoldBy = $('#SoldBy').val();

                //Bind Data for Purchase
                var data = new FormData();

                for (var i = 0; i < saleOrder.SaleOrderDetailList.length; i++) {
                    data.append('SalesDetailList[' + i + '].ProductId', saleOrder.SaleOrderDetailList[i].ProductId);
                    data.append('SalesDetailList[' + i + '].Qty', saleOrder.SaleOrderDetailList[i].Qty);
                    data.append('SalesDetailList[' + i + '].UnitPrice', saleOrder.SaleOrderDetailList[i].UnitPrice);
                    data.append('SalesDetailList[' + i + '].DiscountPerItem', saleOrder.SaleOrderDetailList[i].DiscountPerItem);
                    data.append('SalesDetailList[' + i + '].Vatpercent', saleOrder.SaleOrderDetailList[i].Vatpercent);
                }
                //TODO
                for (var i = 0; i < saleOrder.ContentInfoJson.length; i++) {
                    data.append('ContentInfoJson[' + i + '].DocumentTypeId',1);
                    data.append('ContentInfoJson[' + i + '].UploadFile', saleOrder.ContentInfoJson[i].UploadFile);
                }
                //TODO
                for (var i = 0; i < saleOrder.SalePaymenJson.length; i++) {
                    data.append('SalesPaymentReceiveJson[' + i + '].PaymentMethodId', saleOrder.SalePaymenJson[i].PaymentMethodId);
                    data.append('SalesPaymentReceiveJson[' + i + '].PaidAmount', saleOrder.SalePaymenJson[i].PaidAmount);
                    data.append('SalesPaymentReceiveJson[' + i + '].PaymentDate', saleOrder.SalePaymenJson[i].PaymentDate);
                }
                data.append("CustomerMobile", CustomerMobile);
                data.append("DiscountOnTotalPrice", DiscountOnTotal);
                data.append("SoldBy", SoldBy);
                //data.append("__RequestVerificationToken", $("input[name=__RequestVerificationToken]").val());//.attr("name","__RequestVerificationToken").val());//TODO

                $.ajax({
                    url: '@Url.Action("Create", "Sale")',
                    data: data,
                    type: "POST",
                    processData: false,
                    contentType: false,
                    dataType: "json",
                    beforeSend: function () {
                        $("#AjaxLoader").show();

                    },
                    success: function (result) {
                        $("#AjaxLoader").hide();

                        if (result == false) {
                            alert("Please add atleast one  Item");
                        }
                        else {
                            window.location.href = '@Url.Action("Index", "Sale")';
                        }
                    },
                    error: function (x, e) {
                        $("#AjaxLoader").hide();
                        alert('error');
                    }
                });
            },
            product : {
                init: function () { },
                productAutoComplete: function () {
                    var materialforrequsition = {
                        Initialize: function () {
                            materialforrequsition.Typehead();
                        },

                        Typehead: function () {
                            $('#Product').typeahead('destroy');
                            $('#Product').typeahead({
                                    hint: true,
                                    highlight: true,
                                    minLength: 2,
                                },
                                {
                                    items: 8,
                                    name: 'Product',
                                    displayKey: function (s) {
                                        return s.name;
                                    },
                                    property: "ProductId",
                                    source: function (strmaterial, process) {
                                        var url = '@Url.Content("~/Products/SaleProductAutoComplete")';
                                        return $.getJSON(url, { filterText: $("#Product").val() }, function (Data) {

                                            return process(Data);
                                        });
                                    },
                                    updater: function (item) {
                                        return item.name;
                                    }
                                }).on('typeahead:selected', function (obj, datum) {

                                    $("#ProductId").val(datum.id);
                                    //$('#Amount').text(datum.unitPrice);
                                    $('#item').val('1');
                                    $('#amount').val(datum.unitPrice);
                                    $('#VAT').val(datum.vat);
                                    $('#MaxSaleQty').val(datum.maxSaleQty);
                                saleOrder.CalculateVatValueWithTotal(datum.vat);
                            });
                            $("#Product").focus();

                        }
                    }
                    materialforrequsition.Initialize();
                }
            }
        }

