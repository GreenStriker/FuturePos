@model vms.entity.viewModels.VmDuePayment

                <div class="form-group">
                    <label class="col-md-3 control-label">Payment Method : </label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(x => Model.PaymentMethodId, new SelectList(Model.PaymentMethods, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Payable Amount : </label>
                    <div class="col-md-4">
                        <input asp-for="PayableAmount" class="form-control" readonly />
                        <span asp-validation-for="PayableAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Paid Amount : </label>
                    <div class="col-md-4">
                        <input asp-for="PrevPaidAmount" class="form-control" readonly />
                        <span asp-validation-for="PrevPaidAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Due Amount : </label>
                    <div class="col-md-4">
                        <input asp-for="DueAmount" class="form-control" readonly />
                        <span asp-validation-for="DueAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Need To Pay : </label>
                    <div class="col-md-4">
                        <input asp-for="PaidAmount" class="form-control" />
                        <span asp-validation-for="PaidAmount" class="text-danger"></span>
                    </div>
                </div>



         

           